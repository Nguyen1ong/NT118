<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:src="@drawable/logo_vietjetair"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/airplane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VietJetAir"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/logo"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:20 ---> 01:00"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VND 2.752.000"
        android:textColor="@color/button"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/time"
        app:layout_constraintTop_toBottomOf="@id/airplane"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Đặt vé"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintRight_toRightOf="@id/price"/>

</androidx.constraintlayout.widget.ConstraintLayout>