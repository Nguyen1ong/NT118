<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@drawable/tab_indicator_flight">

    <TextView
        android:id="@+id/tv_destination_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa điểm thuê xe của bạn"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        />
    <ImageView
        android:id="@+id/iv_icon_place"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_destination_place"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp" />

    <Spinner
        android:id="@+id/sp_destination_place"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_destination_place"
        app:layout_constraintLeft_toRightOf="@id/iv_icon_place"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/flight_from_spinner" />

    <TextView
        android:id="@+id/tv_date_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày và giờ đón khách"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/sp_destination_place"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="8dp"
        />

    <ImageView
        android:id="@+id/iv_date_start"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_cal_in"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_time_start"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_date_start"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_time_start"
        app:layout_constraintLeft_toRightOf="@id/iv_date_start"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="110dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/flight_from_spinner" />

    <TextView
        android:id="@+id/tv_time_start"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_time_start"
        app:layout_constraintLeft_toRightOf="@id/tv_date_start"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/flight_from_spinner" />

    <TextView
        android:id="@+id/tv_date_time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày và giờ trả khách"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_date_start"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="8dp"
        />

    <ImageView
        android:id="@+id/iv_date_end"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_cal_out"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_time_end"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_date_end"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_time_end"
        app:layout_constraintLeft_toRightOf="@id/iv_date_end"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="110dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/flight_from_spinner" />

    <TextView
        android:id="@+id/tv_time_end"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_time_end"
        app:layout_constraintLeft_toRightOf="@id/tv_date_end"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/flight_from_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>