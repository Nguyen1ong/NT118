<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tab_indicator_flight"
    android:backgroundTint="@color/black2"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">
    <ImageView
        android:id="@+id/ic_unseen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notify_unseen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/ic_seen"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_checked"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="this is notify description aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:lines="3"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/created"
        android:textColor="@color/white"
        android:text="yyyy-mm-dd hh:mm:ss"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toLeftOf="@id/text"
        android:textStyle="italic"
        android:layout_marginTop="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>