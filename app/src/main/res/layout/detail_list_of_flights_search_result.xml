<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_height="70dp"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_vietjetair"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/airplane"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="VietJetAir"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/logo"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/departureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:20"
        android:textSize="12dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/airplane"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SGN"
        android:textSize="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/departureTime"
        app:layout_constraintLeft_toLeftOf="@id/departureTime"
        app:layout_constraintRight_toRightOf="@id/departureTime"
        android:layout_marginTop="8dp"/>
    <ImageView
        android:src="@drawable/ic_arrow"
        android:id="@+id/arrow"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@id/departureTime"
        app:layout_constraintBottom_toBottomOf="@id/departureTime"
        app:layout_constraintTop_toTopOf="@id/departureTime"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:flow_verticalAlign="center"/>

    <TextView
        android:id="@+id/travelTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5h 40m"
        android:textSize="10dp"
        android:textColor="@color/subtext"
        app:layout_constraintBottom_toTopOf="@id/arrow"
        app:layout_constraintLeft_toLeftOf="@id/arrow"
        app:layout_constraintRight_toRightOf="@id/arrow"/>
    <TextView
        android:id="@+id/stop_direct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bay thang"
        android:textSize="10dp"
        android:textColor="@color/subtext"
        app:layout_constraintTop_toBottomOf="@id/arrow"
        app:layout_constraintLeft_toLeftOf="@id/arrow"
        app:layout_constraintRight_toRightOf="@id/arrow"/>
    <TextView
        android:id="@+id/arrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:00"
        android:textSize="12dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/airplane"
        app:layout_constraintLeft_toRightOf="@id/arrow"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HNA"
        android:textSize="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/arrivalTime"
        app:layout_constraintLeft_toLeftOf="@id/arrivalTime"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="05-01-2024"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="@id/airplane"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>